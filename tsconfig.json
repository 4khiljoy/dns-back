{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",       // Output compiled files to the 'dist' directory
    "rootDir": "./src",       // Specify the source directory
    "strict": true,           // Enable strict type-checking options
    "esModuleInterop": true,  // Allow importing non-ESM modules
    "skipLibCheck": true,     // Skip type-checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./"
    
  },
  "include": ["src/**/*.ts"], // Include all TypeScript files in the 'src' folder
  "exclude": ["node_modules"] // Exclude 'node_modules' folder from compilation
}
